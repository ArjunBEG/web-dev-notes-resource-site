workflow "Send SMS On Push" {
  on = "push"
  resolves = [ "notification" ]
}

action "notification" {
  uses = "iyanuashiri/twilio-sms-action@master"
  secrets = [
    "TWILIO_ACCOUNT_SID",
    "TWILIO_AUTH_TOKEN",
    "TWILIO_CALLER_ID",
    "+15512545505"
  ]
  args = "New pull on $GITHUB_REPOSITORY from $GITHUB_ACTOR."
}
